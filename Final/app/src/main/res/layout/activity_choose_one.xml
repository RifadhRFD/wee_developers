<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/back3"
    android:layout_width="fill_parent"
    android:background="@drawable/newbgall"
    android:layout_height="fill_parent"
    tools:context="com.example.foodswipe.ChooseOne">


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/caudex"
            android:text="Let's try delicious food that you have never tried before !"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="19dp"
            android:textStyle="bold|italic" />


        <Button
            android:id="@+id/chef"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:textSize="15dp"
            android:background="@drawable/buttonszd"
            android:text="Join as Chef"
            android:textStyle="bold"
            android:textColor="@color/midblue" />

        <Button
            android:id="@+id/customer"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@drawable/buttonszd"
            android:text="Join as Customer"
            android:textSize="15dp"
            android:textColor="@color/midblue" />

        <Button
            android:id="@+id/delivery"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp"
            android:background="@drawable/buttonszd"
            android:text="Join as Delivery person"
            android:textColor="@color/midblue" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>